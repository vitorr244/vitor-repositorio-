# Rotina de uma calculadora simples.

#
# Entrada de dados.
#

num1 = float( input( "Qual é o primeiro número? ") )

operador = input ( "Qual operação deseja fazer? ")

num2 = float( input( "Qual é o segundo? ") )

# 
# Calculadora.
#

if operador == '+' :
    resultado = num1 + num2
    print( f"O resultado é: {resultado}")
    
elif operador == '-' :
    resultado = num1 - num2
    print( f"O resultado é: {resultado}")
    
elif operador == 'x' or operador == '*' :
    resultado = num1 * num2
    print( f"O resultado é: {resultado}")
    
elif operador == '/' :
    resultado = num1 / num2
    print( f"O resultado é: {resultado}")
    
else:
    print( "Operação inválida!!!" )
 